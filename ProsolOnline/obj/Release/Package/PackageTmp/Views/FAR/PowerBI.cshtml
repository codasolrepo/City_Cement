                    <div class="fixTableHead">
                        <div class="table-responsive">
                            <div style="display:block;max-height:525px" class="tbl-content">

                                <table class="table table-bordered">
                                    <thead class="top-border" align="center">

                                        <tr>
                                            <th>Cluster</th>
                                            <th>Location</th>
                                            <th>Report Group</th>
                                            <th>Asset Count</th>
                                            <th>Asset Completed</th>
                                            <th>New Asset</th>
                                            <th>Furniture</th>
                                            <th>Asset Pending</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr ng-repeat="item in dashData">
