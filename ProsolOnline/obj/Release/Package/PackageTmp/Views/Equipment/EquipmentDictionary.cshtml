
@{
    ViewBag.Title = "Equipment Dictionary";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section role="main" class="content-body" ng-controller="DictionaryViewController">
  
    <header class="alert-messages">
        <div class="col-md-12">
               <div class="col-md-6"></div>
            <div class="col-md-2">
                <div cg-busy="cgBusyPromises" style="margin-top: -45px;z-index: 11111;position:fixed;width:50%"> </div>
            </div>
        </div>
    </header>
    <!-- start: page -->
    <div class="row" >
        <div class="col-xs-12">
            <section class="panel">
                <header class="panel-heading">
                    <h2 class="panel-title">Equipment Dictionary</h2>
                </header>
                <div class="form-group">

                    <div class="tabs create-panel">
                        <ul class="nav nav-tabs">
                            <li class="active">
                                <a href="#Single" data-toggle="tab" ng-click="resdwn=false;" aria-expanded="true">Equipment Dictionary</a>
                            </li>
                            <li>
                                <a href="#Bulkupload" data-toggle="tab" ng-click="resdwn=true;" aria-expanded="false">Bulk Upload</a>
                            </li>
                            <a ng-show="resdwn!=false" class="download pull-right" href="/Common/Equipmentdictionary.xlsx"><i class="fa fa-download example-2"></i>&nbsp; Download Template</a>
                        </ul>
                        <div class="tab-content">
                            <div id="Single" class="tab-pane active">
                                <div class="col-md-6"></div>

                                <div class="col-md-12">
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label class="col-md-12 control-label">Noun</label>
                                            <div class="col-md-12">
                                                <input type="text" class="form-control" ng-model="noun1" style="margin-bottom: 0.5%;">
                                            </div>
                                            <div class="col-md-12">

                                                <select class="form-control" ng-multiple="true" multiple ng-model="lst.Noun" ng-click="SelectNoun()" ng-options="lst.Noun as lst.Noun  for lst  in Nouns | unique:'Noun' | filter: noun1" style="min-height:200px;"></select>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label class="col-md-12 control-label">Modifier</label>
                                          <div class="col-md-12"> <br /></div>
                                            <div class="col-md-12">
                                                <select class="form-control" multiple ng-model="lst.Modifier" ng-click="SelectModifier()" ng-options="lst.Modifier  as lst.Modifier for lst in Modifiers" style="min-height:200px;"></select>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label class="col-md-12 control-label">Image</label>
                                            <div class="col-md-6">
                                                <img src="{{NM.FileData}}" ng-show="NM.FileData == null ? false:true" width="230" height="230" />
                                            </div>
                                        </div>
                                    </div>
                                    @*<div class="col-md-4">
                                        <div class="form-group">
                                            <label class="col-md-12 control-label">Characteristics</label>
                                            <div class="col-md-12">
                                                <select class="form-control" multiple ng-model="lst.Characteristic" ng-click="SelectCharater()" ng-options="lst.Characteristic  as lst.Characteristic for lst in rows | filter: charater" style="min-height:154px;"></select>
                                            </div>
                                        </div>
                                    </div>*@
                                </div>



                                <div class="col-md-12">
                                    <div class="col-md-6">
                                        <section ng-show="sparelist != null">
                                            <div class="panel-body">                                                
                                                <div class="col-md-12 table-responsive">
                                                    <table class="table table-bordered mb-none">
                                                        <thead class="top-border ng-scope">
                                                            <tr>
                                                                <th style="width: 29%;text-align:center;">Spare List</th>
                                                                <th style="width: 24%;text-align:center;">Non-Cataloged Parts</th>
                                                                <th style="width: 25%;text-align:center;">Cataloged Parts</th>
                                                                @*<th style="width: 25%;text-align:center;">Spare Category</th>*@
                                                            </tr>
                                                        </thead>
                                                    </table>
                                                </div>
                                                <div class="col-md-12">
                                                    <div style="max-height: 250px !important;overflow-y: scroll;" class="table-responsive">
                                                        <table class="table table-bordered mb-none">
                                                            <tbody>
                                                                <tr ng-repeat="x in sparelist">
                                                                    <td style="width: 30%">{{x.SpareList}}</td>
                                                                    <td style="text-align:center;width: 25%;"><i class="fa fa-check-circle fa-lg" ng-hide="x.NCP !== 'Yes'" aria-hidden="true"></i>@*<input type="checkbox"  ng-true-value="'Yes'" ng-checked="x.NCP == 'Yes'" ng-false-value="'No'" ng-model="x.NCP" />*@</td>
                                                                    <td style="text-align:center;width: 25%"><i class="fa fa-check-circle fa-lg" ng-hide="x.CP !== 'Yes'" aria-hidden="true"></i>@*<input type="checkbox" ng-true-value="'Yes'" ng-checked="x.CP == 'Yes'" ng-false-value="'No'" ng-model="x.CP" />*@</td>
                                                                    @*<td style="width: 20%">{{x.SpareCategory}}</td>*@
                                                                </tr>
                                                            </tbody>
                                                        </table>
                                                    </div>
                                                </div>

                                                </div>
                                        </section>
                                    </div>
                                    <div class="col-md-2">
                                        <div class="form-group" ng-show="sparelist!=null" style="margin-top: 0px;">
                                            <fieldset>
                                                <legend style="font-size:12px;"> <label class="col-md-12 control-label">Consumable Items</label></legend>
                                                <div class="col-md-12">
                                                    <select class="form-control" ng-model="consu" multiple ng-options="x.SpareList as x.SpareList for x in sparelist | filter:{'SpareCategory':'Consumable Item'}:true" style="min-height: 250px;border: none;overflow: auto;box-shadow: inset 0 0px 0px rgb(0 0 0 / 8%);"></select>

                                                </div>
                                            </fieldset>
                                        </div>
                                    </div>
                                    <div class="col-md-2">
                                        <div class="form-group" ng-show="sparelist!=null" style="margin-top: 0px;">
                                            <fieldset>
                                                <legend style="font-size:12px;">
                                                    <label class="col-md-12 control-label">Wearing Items</label></legend>
                                                    <div class="col-md-12">
                                                        <select class="form-control" ng-model="wear" multiple ng-options="x.SpareList as x.SpareList for x in sparelist | filter:{'SpareCategory':'Wearing Item'}:true" style="min-height: 250px;border: none;overflow: auto;box-shadow: inset 0 0px 0px rgb(0 0 0 / 8%);"></select>
                                                    </div>
                                                </fieldset>
                                        </div>
                                    </div>
                                    <div class="col-md-2">
                                        <div class="form-group"  ng-show="sparelist!=null" style="margin-top: 0px;">
                                            <fieldset>
                                                <legend style="font-size:12px;">
                                                    <label class="col-md-12 control-label">Non Wearing Items</label></legend>
                                                    <div class="col-md-12">
                                                        <select class="form-control" ng-model="non" multiple ng-options="x.SpareList as x.SpareList for x in sparelist | filter:{'SpareCategory':'Non Wearing Item'}:true" style="min-height: 250px;border: none;overflow: auto;box-shadow: inset 0 0px 0px rgb(0 0 0 / 8%);"></select>
                                                    </div>
                                                </fieldset>
                                        </div>
                                    </div>
                                </div>
 
                            </div>
                            <div id="Bulkupload" class="tab-pane">
                                  <div class="form-group single-item">
                                        <div class="col-md-12">
                                            <div class="col-md-8">
                                                <label class="col-md-2 control-label">File Upload</label>
                                                <div class="col-md-7">
                                                    <div class="fileinput fileinput-new input-group" data-provides="fileinput">
                                                        <div class="form-control" data-trigger="fileinput"><i class="glyphicon glyphicon-file fileinput-exists"></i> <span class="fileinput-filename"></span></div>
                                                        <span class="input-group-addon btn btn-default btn-file"><span class="fileinput-new">Select file</span><span class="fileinput-exists">Change</span><input type="file" name="..." onchange="angular.element(this).scope().LoadFileData(this.files)"></span>
                                                        <a href="#" class="input-group-addon btn btn-default fileinput-exists" data-dismiss="fileinput">Remove</a>
                                                    </div>
                                                </div>
                                                <div class="col-md-1">
                                                    <button ng-click="BulkDictionary()" class="btn btn-primary" ng-disabled="false != ShowHide">Submit</button>&nbsp;
                                                </div>
                                            </div>
                                           

                                        </div>

                                    </div>
                            </div>
                            </div>
                        </div>
                </div>
                </section>
        </div>
    </div>
    <script src="/Scripts/ctrls/EquipDictionaryctrl.js"></script>
    <!-- end: page -->
</section>


