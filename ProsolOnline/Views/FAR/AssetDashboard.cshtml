
@{
    ViewBag.Title = "Over View Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";

    <link href="~/Content/angular-busy.min.css" rel="stylesheet" />
    <link href="~/Content/jBox.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
}
<style>
    html::-webkit-scrollbar {
        display: none;
    }

    .panel {
        justify-content: center;
    }

    .panel-title {
        color: #1e3a8a;
        line-height: 3rem;
        font-weight: 700;
    }


    .card {
        overflow: scroll;
        position: absolute;
        width: 97.5%;
        top: 0;
        height: 550px;
        background: white;
        border-radius: 5px;
        padding: 10px;
    }

        .card::-webkit-scrollbar {
            display: none;
        }

    .tbl-content::-webkit-scrollbar {
        display: none;
    }

    .fixTableHead {
        overflow-y: auto;
        height: 525px;
        margin-top: 39px;
    }

        .fixTableHead thead th, .fixTableHead thead .top-tr, .fixTableHead tfoot {
            position: sticky;
            top: 1px;
        }

    .prcentage {
        padding: 0;
        margin: 0;
        position: absolute;
        top: 175px;
        right: -2px;
        /* top: 0; */
        display: flex;
        width: 100%;
        align-items: center;
        text-align: center;
        justify-content: center;
        font-size: 30px;
    }

    .dashboard-container {
        display: grid;
        grid-template-columns: repeat(4, 0fr);
        gap: 5px;
        padding: 5px 10px;
        /*justify-content: center;*/
    }

    .asset-card {
        border: 2px solid #2e4a75;
        border-radius: 5px;
        width: 180px;
        background-color: white;
        box-shadow: 2px 2px 8px rgba(0, 0, 0, 0.2);
        text-align: center;
        font-family: Arial, sans-serif;
        overflow: hidden;
    }

    .asset-header {
        font-size: 10px;
        background-color: #2e4a75;
        color: white;
        font-weight: bold;
        padding: 5px;
    }

    .asset-value {
        font-size: 18px;
        color: #2e4a75;
        font-weight: bold;
        padding: 10px;
    }

    #gauge-container {
        border: 2px solid #2e4a75;
        border-radius: 8px;
        width: 220px;
        height: 165px;
        background-color: white;
        box-shadow: 2px 2px 8px rgba(0, 0, 0, 0.2);
        font-family: Arial, sans-serif;
        overflow: hidden;
    }

    .gauge-header {
        font-size: 10px;
        background-color: #2e4a75;
        color: white;
        font-weight: bold;
        padding: 6px 10px;
        text-align: center;
    }

    .gauge-value {
        position: relative;
        padding: 0;
        background-color: white;
    }

    #gaugePVChart {
        display: block;
        margin: 0 auto;
        width: 150px;
        height: 150px;
    }

    #gaugeCATChart {
        display: block;
        margin: 0 auto;
        width: 150px;
        height: 150px;
    }

    .center-label {
        position: absolute;
        top: 60%;
        left: 50%;
        transform: translate(-50%, -50%);
        font-size: 14px;
        font-weight: bold;
        color: #2a3d66;
        pointer-events: none;
    }

    .label-position {
        position: absolute;
        top: 0;
        width: 100%;
    }

    .footer-labels {
        display: flex;
        justify-content: space-between;
        padding: 2px 20px 2px 20px;
        font-size: 12px;
        color: #2e4a75;
        font-weight: bold;
    }

    #doughnut-container {
        border: 2px solid #2e4a75;
        border-radius: 8px;
        width: 490px;
        height: 335px;
        background-color: white;
        box-shadow: 2px 2px 8px rgba(0, 0, 0, 0.2);
        font-family: Arial, sans-serif;
        overflow: hidden;
    }

    #chart-container {
        width: 100%;
        height: 260px;
        position: relative;
        margin-top: 10px;
    }

    #assetChart {
        width: 100%;
        height: 100%;
    }

    .dn-value {
        display: flex;
        justify-content: center;
        /*align-items: center;*/
        height: 100%;
    }
    .fixTableHead tr th {
        top: -1px !important;
    }

    .table-responsive.fixTableHead {
        max-height: 460px !important;
        overflow-y: auto;
        padding-bottom: 20px;
    }
        .table-responsive.fixTableHead::-webkit-scrollbar {
            width: 8px;
            height: 8px;
        }

        .fixTableHead thead th {
            position: sticky;
            top: 0;
        }
    .tr.top-tr th {
        background: #2e4a75 !important;
    }
</style>
<section role="main" class="content-body" ng-controller="AssetBIcontroller">
    <div class="panel">
        <div class="panel-heading">
            <h2 class="panel-title" style="text-align: center; font-size: 14px;line-height: 1rem;">
                Asset Master Overview
            </h2>
        </div>
        <div class="panel-body">
            <div class="row">

                <div class="col-md-12">
                    <div class="col-md-7 ">

                        <div class="dashboard-container">
                            <div class="asset-card" ng-repeat="box in dashboardStats">
                                <div class="asset-header">{{ box.title }}</div>
                                <div class="asset-value">{{ box.value | number }}</div>
                            </div>
                        </div>
                        <div class="col-md-12 no-padding" style="margin-bottom: 5px;">
                            <div class="col-md-4 no-padding">
                                <div id="gauge-container" style=" margin: 0px 0px 0px 10px;">
                                    <div class="gauge-header">OVERALL ASSETS PV COMPLETION %</div>
                                    <div class="gauge-value">
                                        <canvas id="gaugePVChart" height="180" width="180"></canvas>
                                        <div class="center-label" id="percentagePVLabel">91.24%</div>
                                        <div class="label-position">
                                            <div class="footer-labels">
                                                <span>0.00%</span>
                                                <span>100.00%</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div id="gauge-container" style=" margin: 5px 0px 0px 10px;">
                                    <div class="gauge-header">OVERALL CATALOGUE COMPLETION %</div>
                                    <div class="gauge-value">
                                        <canvas id="gaugeCATChart" height="180" width="180"></canvas>
                                        <div class="center-label" id="percentageCATLabel">91.24%</div>
                                        <div class="label-position">
                                            <div class="footer-labels">
                                                <span>0.00%</span>
                                                <span>100.00%</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-8">
                                <div id="doughnut-container" style=" margin: 0px 0px 0px 10px;">
                                    <div class="gauge-header">OVERALL CATALOGUE STATUS</div>
                                    <div class="dn-value">
                                        <canvas id="catalogueChart" width="490" height="290"></canvas>
                                    </div>
                                </div>

                            </div>
                        </div>

                    </div>
                    <div class="col-md-5">
                        <div style="margin: 5px 0px 0px 40px;">
                            <select name="role1" ng-model="role" data-plugin-selectTwo class="form-control immediate-help" title="Please select at least one role" ng-change="changeRole()">
                                <option value="">--Select Role--</option>
                                <option value="PV User">PV User </option>
                                <option value="Cataloguer">Cataloguer </option>
                                <option value="Reviewer">Reviewer </option>

                             </select>
                </div>
                <div class="col-md-12 table-responsive fixTableHead" style=" margin: 5px 0px 0px 25px; ">
                    <table class="table table-bordered mb-none" style="width: 100%;">
                        <thead class="top-border" align="center">
                            <tr class="top-tr">
                                <th style="width:40%;">Name</th>
                                <th style="width:20%;">Pending</th>
                                <th style="width:20%;">Saved</th>
                                <th style="width:20%;">Total</th>
                            </tr>
                        </thead>
                        <tbody style="width: 100%">
                            <tr ng-repeat="data in usersData | orderBy:'-Overall'">
                                <td>{{data.Name}}</td>
                                <td>{{data.oPending}}</td>
                                <td>{{data.oCompleted}}</td>
                                <td>{{data.Overall}}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>

            </div>
        </div>

